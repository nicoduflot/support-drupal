{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}

{% if content %}
	<div{{attributes.addClass(classes)}}>
		<!-- Intégration de la première partie de l'élément de navigation de bootstrap -->
		<nav class="navbar navbar-expand-lg bg-dark text-white" data-bs-theme="dark">
			<div class="container">
				<a class="navbar-brand" href="#"><i class="bi bi-house-door-fill"></i></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					{{ content }}
				</div>
			</div>
		</nav>
	</div>
{% endif %}
